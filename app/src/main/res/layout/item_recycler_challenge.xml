<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp">

        <View
            android:id="@+id/view15"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="#D2B293"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_ranking_grade"
            app:layout_constraintVertical_bias="1.0" />

        <View
            android:id="@+id/view13"
            android:layout_width="0dp"

            android:layout_height="8dp"
            android:layout_marginStart="-2dp"

            android:layout_marginTop="4dp"
            android:layout_marginEnd="-2dp"
            android:background="@color/underline_green_100"
            app:layout_constraintBottom_toBottomOf="@+id/tv_challenge_reward"
            app:layout_constraintEnd_toEndOf="@+id/tv_challenge_reward"
            app:layout_constraintStart_toStartOf="@+id/tv_challenge_reward"
            app:layout_constraintTop_toTopOf="@+id/tv_challenge_reward" />

        <TextView
            android:id="@+id/tv_challenge_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/view13"
            app:layout_constraintStart_toEndOf="@+id/view13"
            app:layout_constraintTop_toTopOf="@+id/tv_challenge_reward" />

        <TextView
            android:id="@+id/tv_challenge_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/view13"
            app:layout_constraintTop_toBottomOf="@+id/tv_challenge_title" />

        <TextView
            android:id="@+id/tv_challenge_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="50"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_challenge_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="ðŸ‘¤ 10"
            app:layout_constraintBottom_toBottomOf="@+id/tv_challenge_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_challenge_date" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>